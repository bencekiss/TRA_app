<h1>
  <%= @account.phone %>
</h1>
<p>We have sent you a SMS with a code to the number above.</p>
<p>To complete your phone number verification, please enter the 6-digits activation code.</p>
<%= form_tag(account_confirmations_path, method: "post", class: "form-horizontal")  do %>
  <div class="form-group">
    <%= label_tag :verification, "Verification code", class: "col-md-2 control-label" %>
    <div class="col-sm-10">
      <%= text_field_tag :verification, nil, class: "form-control" %>
      <%= hidden_field_tag :account_id, @account.id %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= submit_tag "Confirm", class: "btn btn-success" %>
    </div>
  </div>
<% end %>
